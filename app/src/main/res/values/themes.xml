<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.PwdGigs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>

        <item name="android:statusBarColor" tools:ignore="NewApi">@color/white</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/white</item>
        <!--changes status bar text color when background is white-->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!--changes navigation bar text color when background is white-->
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="SignUpTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/theme_color_3_dark</item>
        <item name="colorPrimary">@color/theme_color_3</item>
    </style>
    <style name="Theme.PwdGigs.NoActionBarAndStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:fitsSystemWindows">true</item>

        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/white</item>
        <!--changes status bar text color when background is white-->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!--changes navigation bar text color when background is white-->
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/theme_color_3</item>   <!--Border Color-->
        <item name="colorControlActivated">@color/theme_color_1</item> <!-- Color when activated -->
    </style>
</resources>